@using IzinTakipVeOnaySistemi.BLL.DTO
@model IzinTalepUpdateDTO

<h2>İzin Talep Güncelleme Sayfası</h2>

<form asp-action="Edit" method="post" class="form-group">
	<div class="form-group">
		<label asp-for="BaslangicTarihi">İzin Başlangıç Tarihi</label>
		<input asp-for="BaslangicTarihi" type="date" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="BitisTarihi">İzin Bitiş Tarihi</label>
		<input asp-for="BitisTarihi" type="date" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="Aciklama"> Açıklama</label>
		<input asp-for="Aciklama" class="form-control" />
	</div>

	<button class="btn btn-primary" type="submit">Kaydet</button>


</form>